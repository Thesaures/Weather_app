{
  // "env": {
  //   "browser": false,
  //   "es6": true,
  //   "node": true
  // },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "plugins": ["@typescript-eslint", "jest", "react", "react-native"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "prettier",
    "react",
    "react-native"
  ],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": 0,
    "semi": ["error", "always"],
    "no-unused-vars": "error"
  },
  "ignorePatterns": [
    ".eslintrc.js",
    "babel.config.js",
    "metro.config.js",
    "crypto-custom.js",
    "jest.config.js"
  ]
}